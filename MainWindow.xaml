<Window x:Class="DRGSoundPad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DRGSoundPad"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600"
        Loaded="Window_Loaded"
        >
    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="输出声卡" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <ComboBox Grid.Column="1" x:Name="CB_OutputDDevice" Width="400" Height="20" SelectedIndex="0"/>
        <TextBlock Grid.Row="1" Text="TTS API" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox  Grid.Row="1" Grid.Column="1" x:Name="TB_TTS_TextBox" Width="400" Height="20" TextChanged="TB_TTS_TextBox_TextChanged" />
        <TextBox Grid.Row="2" Grid.ColumnSpan="2" x:Name="TB_Log" Margin="5" Background="#EEEEEE" />
    </Grid>
</Window>
